generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String   @unique
  password  String
  bio       String?
  photo     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tags    Tag[]
  wishes  Wish[]
  gifts   Gift[]
  groups  Group[]
  wallets Wallet[]
}

model Wallet {
  id          String   @id @default(cuid())
  name        String
  description String?
  isDefault   Boolean  @default(false)
  isFrozen    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId   String
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  parentId String?
  parent   Wallet? @relation("WalletHierarchy", fields: [parentId], references: [id], onDelete: SetNull)

  children           Wallet[]            @relation("WalletHierarchy")
  records            Record[]
  doubts             Doubt[]
  balanceAdjustments BalanceAdjustment[]

  @@unique([name, userId])
}

model Tag {
  id     String @id @default(cuid())
  name   String
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  records Record[]

  @@unique([name, userId])
}

model Record {
  id        String    @id @default(cuid())
  name      String
  price     Float?
  notes     String?
  buyDate   DateTime?
  isIncome  Boolean   @default(false)
  isGift    Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  walletId String
  wallet   Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)

  tags Tag[]
}

model Group {
  id     String @id @default(cuid())
  name   String
  type   String // "wish" or "gift"
  order  Int    @default(0)
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  wishes Wish[]
  gifts  Gift[]

  @@unique([name, userId, type])
}

model Wish {
  id        String   @id @default(cuid())
  name      String
  price     Float?
  notes     String?
  link      String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId  String
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  groupId String?
  group   Group?  @relation(fields: [groupId], references: [id], onDelete: SetNull)
}

model Gift {
  id        String   @id @default(cuid())
  name      String
  price     Float?
  toWho     String?
  notes     String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId  String
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  groupId String?
  group   Group?  @relation(fields: [groupId], references: [id], onDelete: SetNull)
}

model Doubt {
  id        String   @id @default(cuid())
  toWho     String
  doubt     Boolean // true = debo, false = me deben
  amount    Float
  wasPay    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  walletId String
  wallet   Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
}

model BalanceAdjustment {
  id        String   @id @default(cuid())
  amount    Float
  reason    String?
  createdAt DateTime @default(now())

  walletId String
  wallet   Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
}
